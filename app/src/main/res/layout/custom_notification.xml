<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/SlateGray"
    android:paddingHorizontal="10dp"
    android:paddingVertical="20dp">

    <ImageView
        android:id="@+id/custom_notification_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:importantForAccessibility="no" />

    <TextView
        android:id="@+id/custom_notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/custom_notification_icon"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/custom_notification_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/custom_notification_title"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/custom_notification_icon"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtSumit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/custom_notification_message"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/custom_notification_icon"
        android:textColor="@android:color/white"
        android:textSize="14sp" />


</RelativeLayout>
